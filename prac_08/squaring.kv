BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_number
            text: '4.1'
            font_size: 60
            multiline: False

        Button:
            text: 'Square'
            font_size: 37
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            font_size: 55
            color: (15, 100, 100, 0.9)

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Enter a number and press "Square"'
            font_size: 32

